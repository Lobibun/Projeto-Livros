@model LivroCDF.Models.Livro

@{
    ViewData["Title"] = "Excluir Livro";
}

<div class="container mt-4 mt-md-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white text-center py-3">
                    <h3 class="mb-0 fw-bold fs-4"><i class="bi bi-exclamation-octagon-fill"></i> Excluir</h3>
                </div>

                <div class="card-body text-center p-3 p-md-4">
                    @if (ViewData["ErroExclusao"] != null)
                    {
                        <div class="alert alert-warning shadow-sm text-start">
                            <i class="bi bi-exclamation-circle-fill"></i> @ViewData["ErroExclusao"]
                        </div>
                    }

                    <div class="alert alert-light border-danger text-danger mb-4 small">
                        <i class="bi bi-radioactive"></i> <strong>Atenção:</strong> Isso apaga o livro e todo histórico.
                    </div>

                    <div class="d-flex justify-content-center mb-4">
                        <div class="shadow rounded overflow-hidden" style="width: 100px; height: 150px;">
                            @if (!string.IsNullOrEmpty(Model.FotoCaminho))
                            {
                                <img src="@Model.FotoCaminho" class="w-100 h-100" style="object-fit: cover;" />
                            }
                            else
                            {
                                <div class="bg-secondary w-100 h-100 d-flex align-items-center justify-content-center text-white">
                                    <i class="bi bi-book fs-1"></i>
                                </div>
                            }
                        </div>
                    </div>

                    <h4 class="fw-bold text-dark fs-5">@Model.Titulo</h4>
                    <p class="text-muted mb-1 small">Autor: @Model.Autor</p>
                    <p class="text-muted small">ISBN: @Model.ISBN</p>

                    <hr class="my-4" />

                    <form asp-action="Delete" class="d-flex flex-column flex-sm-row justify-content-center gap-2">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-secondary px-4 py-2 w-100 w-sm-auto">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger px-4 fw-bold py-2 w-100 w-sm-auto">
                            <i class="bi bi-trash-fill"></i> Confirmar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>