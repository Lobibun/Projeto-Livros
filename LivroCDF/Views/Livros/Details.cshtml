@model LivroCDF.Models.Livro
@using LivroCDF.Models.Enums

@{
    ViewData["Title"] = "Detalhes do Livro";
}

<div class="bg-primary text-white py-4 shadow-sm mb-4 mt-n3 mx-n3 px-3 px-md-4 rounded-bottom"
     style="background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);">
    <div class="container d-flex align-items-center justify-content-between">
        <div>
            <h1 class="display-6 fw-bold mb-0 fs-3 fs-md-2"><i class="bi bi-info-circle-fill"></i> Detalhes</h1>
        </div>
        <a asp-action="Index" class="btn btn-outline-light fw-bold btn-sm">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>
</div>

<div class="container px-2 px-md-3">
    <div class="card shadow border-0 mb-5">
        <div class="card-body p-3 p-md-4">
            <div class="row">
                <div class="col-12 col-md-3 text-center mb-4 mb-md-0">
                    <div class="shadow-sm rounded overflow-hidden mx-auto" style="max-width: 180px;">
                        @if (!string.IsNullOrEmpty(Model.FotoCaminho))
                        {
                            <img src="@Model.FotoCaminho" class="img-fluid" alt="Capa" />
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center text-muted border" style="height: 250px;">
                                <div class="text-center">
                                    <i class="bi bi-journal-album display-4"></i><br>Sem Capa
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="col-12 col-md-9">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start gap-2 mb-2">
                        <h2 class="text-dark fw-bold mb-0 fs-3">@Model.Titulo</h2>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning shadow-sm w-100 w-md-auto">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                    </div>
                    <h5 class="text-muted mb-4 fst-italic fs-6">@Model.Autor</h5>

                    <div class="row g-3">
                        <div class="col-12 col-sm-4">
                            <div class="p-3 bg-light rounded border text-center text-sm-start">
                                <small class="text-muted fw-bold d-block">ISBN</small>
                                <span class="fs-6 font-monospace text-break"><i class="bi bi-upc"></i> @Model.ISBN</span>
                            </div>
                        </div>
                        <div class="col-6 col-sm-4">
                            <div class="p-3 bg-light rounded border text-center text-sm-start">
                                <small class="text-muted fw-bold d-block">PREÇO</small>
                                <span class="fs-5 text-success fw-bold">R$ @Model.Valor.ToString("F2")</span>
                            </div>
                        </div>
                        <div class="col-6 col-sm-4">
                            <div class="p-3 bg-primary bg-opacity-10 rounded border border-primary text-primary text-center text-sm-start">
                                <small class="fw-bold d-block">TOTAL</small>
                                <span class="fs-5 fw-bold"><i class="bi bi-boxes"></i> @Model.Exemplares.Count()</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-dark fw-bold border-start border-5 border-primary ps-3 fs-4 mb-0">
            <i class="bi bi-collection"></i> Exemplares
        </h3>
        <span class="badge bg-secondary">Exibindo: @Model.Exemplares.Count</span>
    </div>

    <div class="card shadow-sm border-0 mb-4 bg-light">
        <div class="card-body p-3">
            <form asp-action="Details" method="get">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="row g-2 align-items-end">
                    <div class="col-12 col-md-3">
                        <label class="form-label small fw-bold text-muted">Situação</label>
                        <select name="filtroStatus" class="form-select form-select-sm">
                            <option value="">Todas as Situações</option>
                            <!option value="APagar" @(ViewData["FiltroStatus"]?.ToString() == "APagar" ? "selected" : "")>A Pagar</!option>
                            <!option value="Vendido" @(ViewData["FiltroStatus"]?.ToString() == "Vendido" ? "selected" : "")>Vendido</!option>
                            <!option value="Estoque" @(ViewData["FiltroStatus"]?.ToString() == "Estoque" ? "selected" : "")>Estoque</!option>
                        </select>
                    </div>
                    <div class="col-6 col-md-3">
                        <label class="form-label small fw-bold text-muted">De (Data)</label>
                        <input type="date" name="dataInicio" class="form-control form-control-sm" value="@ViewData["DataInicio"]" />
                    </div>
                    <div class="col-6 col-md-3">
                        <label class="form-label small fw-bold text-muted">Até (Data)</label>
                        <input type="date" name="dataFim" class="form-control form-control-sm" value="@ViewData["DataFim"]" />
                    </div>
                    <div class="col-12 col-md-3 d-flex gap-2">
                        <button type="submit" class="btn btn-primary btn-sm w-100">
                            <i class="bi bi-funnel"></i> Filtrar
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-sm" title="Limpar">
                            <i class="bi bi-arrow-counterclockwise"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-5">
        <div class="table-responsive">
            <table class="table table-striped mb-0 align-middle text-nowrap">
                <thead class="table-dark">
                    <tr>
                        <th class="ps-3">ID</th>
                        <th>Data Aquisição</th>
                        <th>Valor Unit.</th>
                        <th class="text-end pe-3">Situação</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Exemplares != null && Model.Exemplares.Any())
                    {
                        foreach (var exemplar in Model.Exemplares)
                        {
                            <tr>
                                <td class="ps-3"><span class="badge bg-secondary">#@exemplar.Id</span></td>
                                <td>@exemplar.DataEntrada.ToShortDateString()</td>
                                <td>R$ @exemplar.Valor.ToString("F2")</td>
                                <td class="text-end pe-3">
                                    @if (exemplar.Status == StatusLivro.APagar)
                                    {
                                        <span class="badge bg-warning text-dark">A Pagar</span>
                                    }
                                    else if (exemplar.Status == StatusLivro.Vendido)
                                    {
                                        <span class="badge bg-success">Vendido</span>
                                    }
                                    else if (exemplar.Status == StatusLivro.Estoque)
                                    {
                                        <span class="badge bg-primary">Estoque</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@exemplar.Status</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">
                                <i class="bi bi-inbox fs-4 d-block mb-2"></i>
                                Nenhum exemplar encontrado com estes filtros.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>