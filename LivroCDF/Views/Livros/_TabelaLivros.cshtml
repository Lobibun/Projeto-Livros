@using LivroCDF.Models.Enums
@model IEnumerable<LivroCDF.Models.Livro>

<div class="card shadow-sm border-0 overflow-hidden">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0 text-nowrap">
            <thead class="bg-light text-secondary">
                <tr>
                    <th class="ps-3 py-3" style="width: 60px;">Capa</th>
                    <th>Livro</th>
                    <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.ISBN)</th>
                    <th>Preço</th>
                    <th class="d-none d-md-table-cell">Estoque</th>
                    <th class="text-end pe-3">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-3">
                            <div class="position-relative shadow-sm rounded overflow-hidden" style="width: 40px; height: 60px;">
                                @if (!string.IsNullOrEmpty(item.FotoCaminho))
                                {
                                    <img src="@item.FotoCaminho" class="w-100 h-100" style="object-fit: cover;"
                                         onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                }
                                <div class="bg-primary text-white w-100 h-100 d-flex align-items-center justify-content-center"
                                     style="@(!string.IsNullOrEmpty(item.FotoCaminho) ? "display:none;" : "")">
                                    <i class="bi bi-book-half small"></i>
                                </div>
                            </div>
                        </td>

                        <td>
                            <div class="fw-bold text-dark text-wrap" style="min-width: 120px; max-width: 250px; line-height: 1.2;">
                                @Html.DisplayFor(modelItem => item.Titulo)
                            </div>
                            <div class="text-muted small d-md-none mt-1 text-truncate" style="max-width: 150px;">
                                @item.Autor
                            </div>
                            <div class="text-muted small d-none d-md-block">
                                @item.Autor
                            </div>
                        </td>

                        <td class="d-none d-md-table-cell">
                            <span class="badge bg-light text-dark border"><i class="bi bi-upc-scan"></i> @item.ISBN</span>
                        </td>

                        <td class="text-success fw-bold">R$ @Html.DisplayFor(modelItem => item.Valor)</td>

                        <td class="d-none d-md-table-cell">
                            @{
                                var qtdReal = item.Exemplares != null ? item.Exemplares.Count(x => x.Status == StatusLivro.Estoque) : 0;
                            }
                            @if (qtdReal > 0)
                            {
                                <span class="badge bg-success bg-opacity-10 text-success rounded-pill">
                                    <i class="bi bi-check-circle-fill"></i> @qtdReal
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill">
                                    <i class="bi bi-x-circle-fill"></i> 0
                                </span>
                            }
                        </td>

                        <td class="text-end pe-3">
                            <div class="btn-group shadow-sm" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-white border text-warning px-2" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-white border text-primary px-2" title="Detalhes">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-white border text-danger px-2" title="Excluir">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-5">
                            <i class="bi bi-journal-x display-4 d-block mb-3 opacity-50"></i>
                            Nenhum livro encontrado.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>