@using LivroCDF.Models.Enums
@model IEnumerable<LivroCDF.Models.Livro>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th style="width: 80px;">Capa</th>
                <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                <th>@Html.DisplayNameFor(model => model.Autor)</th>
                <th>@Html.DisplayNameFor(model => model.ISBN)</th>
                <th>Preço Capa</th>
                <th>Disponibilidade</th>
                <th class="text-end">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.FotoCaminho))
                        {
                            <img src="@item.FotoCaminho" class="shadow-sm rounded"
                                 style="width: 50px; height: 75px; object-fit: cover;" alt="Capa" />
                        }
                        else
                        {
                            <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded shadow-sm"
                                 style="width: 50px; height: 75px;">
                                <i class="bi bi-book" style="font-size: 1.5rem;"></i>
                            </div>
                        }
                    </td>

                    <td class="fw-bold">@Html.DisplayFor(modelItem => item.Titulo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Autor)</td>
                    <td><small class="text-muted">@Html.DisplayFor(modelItem => item.ISBN)</small></td>
                    <td>R$ @Html.DisplayFor(modelItem => item.Valor)</td>

                    <td>
                        @{
                            var qtdReal = item.Exemplares != null
                            ? item.Exemplares.Count(x => x.Status == StatusLivro.Estoque)
                            : 0;
                        }

                        @if (qtdReal > 0)
                        {
                            <span class="badge bg-success rounded-pill">
                                <i class="bi bi-check-circle"></i> @qtdReal Disponíveis
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger rounded-pill">
                                <i class="bi bi-x-circle"></i> Esgotado
                            </span>
                        }
                    </td>

                    <td class="text-end">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Editar">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detalhes">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Excluir">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="7" class="text-center text-muted py-4">
                        Nenhum livro encontrado.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>