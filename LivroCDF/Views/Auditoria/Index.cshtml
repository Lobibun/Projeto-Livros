@model IEnumerable<LivroCDF.Models.LogAuditoria>
@{
    ViewData["Title"] = "Histórico de Atividades";
}

<div class="container-fluid px-3 px-md-4 mt-4">
    <div class="mb-4">
        <h2 class="text-primary fw-bold"><i class="bi bi-shield-check"></i> Auditoria</h2>
        <p class="text-muted small">Monitoramento de atividades do sistema</p>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center"
             data-bs-toggle="collapse" href="#collapseFiltros" role="button" aria-expanded="true">
            <h5 class="card-title mb-0 text-muted"><i class="bi bi-sliders"></i> Filtros</h5>
            <i class="bi bi-chevron-down text-muted"></i>
        </div>

        <div class="collapse show" id="collapseFiltros">
            <div class="card-body">
                <form id="formFiltros" class="row g-3 align-items-center" onsubmit="return false;">

                    <div class="col-6 col-md-3">
                        <div class="form-floating">
                            <input type="date" name="minDate" id="minDate" class="form-control" placeholder="De" />
                            <label for="minDate">De</label>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="form-floating">
                            <input type="date" name="maxDate" id="maxDate" class="form-control" placeholder="Até" />
                            <label for="maxDate">Até</label>
                        </div>
                    </div>

                    <div class="col-12 col-md-3">
                        <div class="form-floating">
                            <input type="text" name="funcionario" id="funcionario" class="form-control" placeholder="Usuário" autocomplete="off" />
                            <label for="funcionario">Buscar Usuário...</label>
                        </div>
                    </div>

                    <div class="col-12 col-md-3">
                        <div class="form-floating">
                            <select name="tipoAcao" id="tipoAcao" asp-items="ViewBag.ListaAcoes" class="form-select">
                                <option value="">-- Todas --</option>
                            </select>
                            <label for="tipoAcao">Tipo de Ação</label>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light d-none d-md-table-header-group">
                        <tr>
                            <th class="ps-4 text-secondary text-uppercase small font-weight-bold">Data/Hora</th>
                            <th class="text-secondary text-uppercase small font-weight-bold">Usuário</th>
                            <th class="text-secondary text-uppercase small font-weight-bold">Ação</th>
                            <th class="text-secondary text-uppercase small font-weight-bold">Detalhes</th>
                        </tr>
                    </thead>
                    <tbody id="tabelaLogsBody">
                        <partial name="_TabelaLogs" model="Model" />
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function debounce(func, wait) {
            let timeout;
            return function(...args) {
                const context = this;
                clearTimeout(timeout);
                timeout = setTimeout(() => func.apply(context, args), wait);
            };
        }

        function atualizarTabela() {
            const params = new URLSearchParams({
                minDate: document.getElementById('minDate').value,
                maxDate: document.getElementById('maxDate').value,
                funcionario: document.getElementById('funcionario').value,
                tipoAcao: document.getElementById('tipoAcao').value
            });

            const url = '@Url.Action("FiltrarLogs", "Auditoria")?' + params.toString();
            const tbody = document.getElementById('tabelaLogsBody');

            tbody.style.opacity = '0.5';

            fetch(url)
                .then(response => response.text())
                .then(html => {
                    tbody.innerHTML = html;
                    tbody.style.opacity = '1';
                })
                .catch(error => {
                    console.error(error);
                    tbody.style.opacity = '1';
                });
        }

        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('funcionario').addEventListener('input', debounce(atualizarTabela, 500));
            document.getElementById('minDate').addEventListener('change', atualizarTabela);
            document.getElementById('maxDate').addEventListener('change', atualizarTabela);
            document.getElementById('tipoAcao').addEventListener('change', atualizarTabela);
        });
    </script>
}