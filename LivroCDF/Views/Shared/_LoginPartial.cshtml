@using Microsoft.AspNetCore.Identity
@using LivroCDF.Models
@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

<ul class="navbar-nav ms-lg-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        var ehSuperAdmin = user != null && await UserManager.IsInRoleAsync(user, "SuperAdmin");
        var ehAdmin = user != null && await UserManager.IsInRoleAsync(user, "Admin");

        <li class="nav-item dropdown mt-3 mt-lg-0 border-top border-secondary pt-3 pt-lg-0 border-lg-0">

            <a class="nav-link dropdown-toggle text-light d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">

                @if (user != null && !string.IsNullOrEmpty(user.FotoCaminho))
                {
                    <img src="@user.FotoCaminho" class="rounded-circle me-2" style="width:28px; height:28px; object-fit:cover;" />
                }
                else
                {
                    <i class="bi bi-person-circle me-2"></i>
                }

                <span>Olá, @(user?.Nome ?? User.Identity?.Name)</span>

                @if (ehSuperAdmin)
                {
                    <span class="badge bg-danger ms-2">CEO</span>
                }
                else if (ehAdmin)
                {
                    <span class="badge bg-warning text-dark ms-2">GERENTE</span>
                }
            </a>

            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="navbarDropdown">
                @if (ehSuperAdmin || ehAdmin)
                {
                    <li><h6 class="dropdown-header">Administração</h6></li>
                    <li>
                        <a class="dropdown-item" asp-controller="Usuarios" asp-action="Index">
                            <i class="bi bi-people me-2"></i> Lista de Usuários
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">
                            <i class="bi bi-person-plus-fill me-2"></i> Criar Novo Usuário
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                }

                <li>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                        <i class="bi bi-gear me-2"></i> Configurações
                    </a>
                </li>

                <li><hr class="dropdown-divider"></li>

                <li>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="dropdown-item text-danger" style="cursor:pointer;">
                            <i class="bi bi-box-arrow-right me-2"></i> Sair
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Registrar</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
        </li>
    }
</ul>