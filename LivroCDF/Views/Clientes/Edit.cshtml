@model LivroCDF.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Cliente</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="DataCadastro" />
                        <input type="hidden" asp-for="FotoCaminho" />
                        <div class="mb-4 text-center">
                            <label class="form-label fw-bold">Foto do Cliente</label>

                            <div class="d-flex justify-content-center">
                                <div class="position-relative" style="width: 120px; height: 120px;">
                                    @if (!string.IsNullOrEmpty(Model.FotoCaminho))
                                    {
                                        <img src="@Model.FotoCaminho" class="rounded-circle border border-3 border-secondary shadow w-100 h-100" style="object-fit: cover;" />

                                        <button type="submit"
                                                asp-action="RemoverFoto"
                                                asp-route-id="@Model.Id"
                                                formnovalidate
                                                class="btn btn-danger btn-sm position-absolute rounded-circle d-flex align-items-center justify-content-center p-0 shadow"
                                                style="top: 0; right: 0; width: 30px; height: 30px; border: 2px solid white;"
                                                title="Remover foto">
                                            <i class="bi bi-x-lg" style="font-size: 14px;"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded-circle border d-flex align-items-center justify-content-center w-100 h-100">
                                            <i class="bi bi-person text-secondary" style="font-size: 60px;"></i>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="mt-3 w-50 mx-auto">
                                <label class="form-label small text-muted">Alterar Imagem</label>
                                <input asp-for="ArquivoFoto" class="form-control form-control-sm" type="file" accept="image/*" />
                            </div>
                        </div>
                        <hr />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nome" class="form-label fw-bold"></label>
                                <input asp-for="Nome" class="form-control" placeholder="Nome completo" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label fw-bold"></label>
                                <input asp-for="Email" class="form-control" placeholder="email@exemplo.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Telefone" class="form-label fw-bold"></label>
                                <input asp-for="Telefone" class="form-control" id="telefoneInput" maxlength="15" onkeyup="mascaraFone(event)" placeholder="(00) 00000-0000" />
                                <span asp-validation-for="Telefone" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Endereco" class="form-label fw-bold"></label>
                                <input asp-for="Endereco" class="form-control" placeholder="Endereço completo" />
                                <span asp-validation-for="Endereco" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-check-lg"></i> Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function mascaraFone(event) {
            var v = event.target.value;
            v = v.replace(/\D/g, "");
            if (v.length > 11) { v = v.substring(0, 11); }
            v = v.replace(/^(\d\d)(\d)/g, "($1) $2");
            if (v.length > 14) {
                v = v.replace(/(\d{5})(\d)/, "$1-$2");
            } else {
                v = v.replace(/(\d{4})(\d)/, "$1-$2");
            }
            event.target.value = v;
        }
    </script>
}