@model LivroCDF.Models.Cliente
@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container mt-3 mt-md-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow border-0 rounded-4">

                <div class="card-header bg-gradient-clientes text-white py-3 rounded-top-4">
                    <h4 class="mb-0 fw-bold fs-5 fs-md-4 text-center text-md-start">
                        <i class="bi bi-pencil-square me-2"></i>Editar Cliente
                    </h4>
                </div>

                <div class="card-body p-3 p-md-4">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="DataCadastro" />
                        <input type="hidden" asp-for="FotoCaminho" />

                        @* Área de Foto *@
                        <div class="mb-4 text-center p-3 bg-light rounded-3 border">
                            <label class="form-label fw-bold text-muted small text-uppercase mb-3">Foto Atual / Alterar</label>

                            <div class="d-flex justify-content-center mb-3">
                                <div class="position-relative" style="width: 120px; height: 120px;">
                                    @* Lógica de exibição da foto *@
                                    @if (!string.IsNullOrEmpty(Model.FotoCaminho))
                                    {
                                        <img id="imgPreview" src="@Model.FotoCaminho" class="rounded-circle border border-3 border-white shadow w-100 h-100" style="object-fit: cover;"
                                             onerror="this.style.display='none'; document.getElementById('iconDefault').classList.remove('d-none');" />

                                        @* Fallback caso a imagem quebre *@
                                        <div id="iconDefault" class="bg-white rounded-circle border d-flex align-items-center justify-content-center w-100 h-100 shadow-sm d-none">
                                            <i class="bi bi-person text-secondary" style="font-size: 50px;"></i>
                                        </div>
                                    }
                                    else
                                    {
                                        <img id="imgPreview" src="#" class="rounded-circle border border-3 border-white shadow w-100 h-100 d-none" style="object-fit: cover;" />
                                        <div id="iconDefault" class="bg-white rounded-circle border d-flex align-items-center justify-content-center w-100 h-100 shadow-sm">
                                            <i class="bi bi-person text-secondary" style="font-size: 50px;"></i>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="w-100 w-md-50 mx-auto">
                                <input asp-for="ArquivoFoto" class="form-control form-control-sm" type="file" accept="image/*" onchange="carregarPreview(event)" />
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Nome" class="form-label fw-bold small text-muted text-uppercase">Nome</label>
                                <input asp-for="Nome" class="form-control form-control-lg fs-6 fs-md-5" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>

                            <div class="col-12 col-md-6">
                                <label asp-for="Email" class="form-label fw-bold small text-muted text-uppercase">E-mail</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" class="form-control" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-12 col-md-6">
                                <label asp-for="Telefone" class="form-label fw-bold small text-muted text-uppercase">Telefone</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-telephone"></i></span>
                                    <input asp-for="Telefone" class="form-control" onkeyup="mascaraFone(event)" maxlength="15" />
                                </div>
                                <span asp-validation-for="Telefone" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Endereco" class="form-label fw-bold small text-muted text-uppercase">Endereço</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-geo-alt"></i></span>
                                    <input asp-for="Endereco" class="form-control" />
                                </div>
                                <span asp-validation-for="Endereco" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mt-4 pt-3 border-top gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary w-100 w-md-auto order-1 order-md-0">
                                <i class="bi bi-arrow-left"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-4 shadow-sm w-100 w-md-auto order-0 order-md-1">
                                <i class="bi bi-check-lg"></i> Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function carregarPreview(event) {
            var input = event.target;
            var preview = document.getElementById('imgPreview');
            var icon = document.getElementById('iconDefault');
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.classList.remove('d-none');
                    if(icon) icon.classList.add('d-none');
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
        function mascaraFone(event) {
            var v = event.target.value.replace(/\D/g, "");
            v = v.replace(/^(\d\d)(\d)/g, "($1) $2");
            v = v.replace(/(\d{5})(\d)/, "$1-$2");
            event.target.value = v.substring(0, 15);
        }
    </script>
}