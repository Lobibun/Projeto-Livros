@model LivroCDF.Models.Cliente
@using LivroCDF.Models.Enums

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<div class="container mt-4">

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-3 text-center mb-3 mb-md-0">
                    @if (!string.IsNullOrEmpty(Model.FotoCaminho))
                    {
                        <img src="@Model.FotoCaminho" alt="Foto de @Model.Nome" class="rounded-circle img-thumbnail shadow-sm" style="width: 150px; height: 150px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center shadow-sm" style="width: 150px; height: 150px;">
                            <i class="bi bi-person text-secondary" style="font-size: 80px;"></i>
                        </div>
                    }
                </div>
                <div class="col-md-9">
                    <h2 class="display-6 fw-bold">@Html.DisplayFor(model => model.Nome)</h2>
                    <p class="text-muted fs-5 mb-1"><i class="bi bi-envelope"></i> @Html.DisplayFor(model => model.Email)</p>
                    <p class="text-muted fs-5"><i class="bi bi-telephone"></i> @(string.IsNullOrEmpty(Model.Telefone) ? "Não informado" : Model.Telefone)</p>
                    <div class="mt-3">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Editar Dados</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h3 class="mb-3 text-primary"><i class="bi bi-clock-history"></i> Histórico de Compras / Pendências</h3>

    <div class="card bg-light mb-3 p-3 shadow-sm">
        <div class="row g-2 align-items-end">
            <div class="col-md-4">
                <label class="small text-muted fw-bold">Buscar Livro:</label>
                <input type="text" id="filtroTermo" class="form-control" placeholder="Ex: Dom Casmurro..." />
            </div>
            <div class="col-md-2">
                <label class="small text-muted fw-bold">Status:</label>
                <select id="filtroStatus" class="form-select" asp-items="Html.GetEnumSelectList<StatusLivro>()">
                    <option value="">Todos</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="small text-muted fw-bold">Data Início:</label>
                <input type="date" id="filtroInicio" class="form-control" />
            </div>
            <div class="col-md-2">
                <label class="small text-muted fw-bold">Data Fim:</label>
                <input type="date" id="filtroFim" class="form-control" />
            </div>
            <div class="col-md-2">
                <button onclick="limparFiltros()" class="btn btn-outline-secondary w-100">Limpar</button>
            </div>
        </div>
    </div>

    <div id="containerHistorico">
        @if (Model.Compras != null && Model.Compras.Any())
        {
            <partial name="_HistoricoCliente" model="Model.Compras.OrderByDescending(x => x.DataVenda)" />
        }
        else
        {
            <div class="alert alert-info shadow-sm">
                <i class="bi bi-info-circle-fill"></i> Nenhuma movimentação registrada para este cliente.
            </div>
        }
    </div>
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Voltar para Lista
        </a>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#filtroTermo").on("keyup", function() { atualizarHistorico(); });
            $("#filtroStatus, #filtroInicio, #filtroFim").on("change", function() { atualizarHistorico(); });
        });

        function atualizarHistorico() {
            var clienteId = @Model.Id;
            var termo = $("#filtroTermo").val();
            var status = $("#filtroStatus").val();
            var inicio = $("#filtroInicio").val();
            var fim = $("#filtroFim").val();

            $("#containerHistorico").css("opacity", "0.5");

            $.get("/Clientes/FiltrarHistorico",
                {
                    clienteId: clienteId,
                    termo: termo,
                    status: status,
                    dataInicio: inicio,
                    dataFim: fim
                },
                function (data) {
                    $("#containerHistorico").html(data);
                    $("#containerHistorico").css("opacity", "1");
                }
            );
        }

        function limparFiltros() {
            $("#filtroTermo").val("");
            $("#filtroStatus").val("");
            $("#filtroInicio").val("");
            $("#filtroFim").val("");
            atualizarHistorico();
        }
    </script>
}