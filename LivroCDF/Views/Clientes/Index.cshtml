@model IEnumerable<LivroCDF.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>👥 Clientes</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-person-plus-fill"></i> Novo Cliente</a>
</div>

@* --- BARRA DE PESQUISA --- *@
<div class="row mb-4">
    <div class="col-md-6">
        <div class="input-group">
            <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
            <input type="text" id="campoPesquisa" class="form-control" placeholder="Pesquisar por nome ou email..." autocomplete="off">
        </div>
    </div>
</div>

@* --- LOCAL ONDE A TABELA VAI CARREGAR --- *@
<div id="containerTabela">
    <partial name="_TabelaClientes" model="Model" />
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Quando digitar no campo...
            $("#campoPesquisa").on("keyup", function () {
                var valor = $(this).val();

                // Chama o Controller e atualiza só a div da tabela
                $.ajax({
                    url: '@Url.Action("FiltrarClientes", "Clientes")',
                    data: { termoPesquisa: valor },
                    success: function (resultado) {
                        $("#containerTabela").html(resultado);
                    }
                });
            });
        });
    </script>
}