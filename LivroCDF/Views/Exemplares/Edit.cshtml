@model LivroCDF.Models.Exemplar
@using LivroCDF.Models.Enums

@{
    ViewData["Title"] = "Gerenciar Exemplar";
}

<div class="d-flex align-items-center mb-3">
    @if (Model.Livro != null && !string.IsNullOrEmpty(Model.Livro.FotoCaminho))
    {
        <img src="@Model.Livro.FotoCaminho" class="rounded me-3 shadow-sm" style="height: 80px;" />
    }
    <div>
        <h2 class="mb-0">Gerenciar Exemplar #@Model.Id</h2>
        <h4 class="text-muted">@ViewBag.TituloLivro</h4>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Exemplares" asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="LivroId" />

            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label">Situação Atual</label>
                <select asp-for="Status" id="ddlStatus" class="form-control" asp-items="Html.GetEnumSelectList<StatusLivro>()" onchange="verificarStatus()"></select>
            </div>

            <div class="form-group mb-3" id="divCliente" style="display:none;">
                <label asp-for="ClienteId" class="control-label fw-bold" style="color: #d63384;">Cliente (Comprador)</label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId">
                    <option value="">-- Selecione o Cliente --</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Valor" class="control-label">Valor Real (R$)</label>
                <input asp-for="Valor" class="form-control" type="number" step="0.01" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="DataEntrada" class="control-label fw-bold">Data de Entrada</label>
                <input asp-for="DataEntrada" class="form-control bg-light" type="datetime-local" readonly
                       value="@Model.DataEntrada.ToString("yyyy-MM-ddTHH:mm")" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="DataVenda" class="control-label fw-bold">Data da Venda</label>
                <input asp-for="DataVenda" class="form-control" type="datetime-local"
                       value="@(Model.DataVenda?.ToString("yyyy-MM-ddTHH:mm"))" />
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // MANTIVE O SCRIPT ORIGINAL EXATAMENTE COMO ESTAVA
        function verificarStatus() {
            var statusSelect = document.getElementById("ddlStatus");
            var divCliente = document.getElementById("divCliente");

            var textoSelecionado = statusSelect.options[statusSelect.selectedIndex].text;

            if (textoSelecionado === "Vendido" || textoSelecionado === "A Pagar") {
                divCliente.style.display = "block";
            } else {
                divCliente.style.display = "none";
            }
        }

        document.addEventListener("DOMContentLoaded", function() {
            verificarStatus();
        });
    </script>
}