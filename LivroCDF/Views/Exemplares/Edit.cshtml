@model LivroCDF.Models.Exemplar
@using LivroCDF.Models.Enums

@{
    ViewData["Title"] = "Gerenciar Exemplar";
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />

<div class="d-flex align-items-center mb-3">
    @if (Model.Livro != null && !string.IsNullOrEmpty(Model.Livro.FotoCaminho))
    {
        <img src="@Model.Livro.FotoCaminho" class="rounded me-3 shadow-sm" style="height: 80px;" />
    }
    <div>
        <h2 class="mb-0">Gerenciar Exemplar #@Model.Id</h2>
        <h4 class="text-muted">@ViewBag.TituloLivro</h4>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-md-5">
        <form asp-controller="Exemplares" asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="LivroId" />

            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label">Situação Atual</label>
                <select asp-for="Status" id="ddlStatus" class="form-select" asp-items="Html.GetEnumSelectList<StatusLivro>()"></select>
            </div>

            <div class="form-group mb-3 p-3 border rounded bg-light" id="divCliente" style="display:none;">
                <label asp-for="ClienteId" class="control-label fw-bold" style="color: #d63384;">Cliente (Comprador)</label>
                <select asp-for="ClienteId" id="ddlCliente" class="form-select" asp-items="ViewBag.ClienteId">
                    <option value="">-- Pesquise o Cliente --</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Valor" class="control-label">Valor Real (R$)</label>
                <input asp-for="Valor" class="form-control" type="number" step="0.01" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="DataEntrada" class="control-label fw-bold">Data de Entrada</label>
                <input asp-for="DataEntrada" class="form-control bg-light" type="datetime-local" readonly
                       value="@Model.DataEntrada.ToString("yyyy-MM-ddTHH:mm")" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="DataVenda" class="control-label fw-bold">Data da Venda</label>
                <input asp-for="DataVenda" class="form-control" type="datetime-local"
                       value="@(Model.DataVenda?.ToString("yyyy-MM-ddTHH:mm"))" />
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            // 1. Inicializa Select2 no Cliente
            $('#ddlCliente').select2({
                theme: 'bootstrap-5',
                placeholder: "Selecione o Cliente...",
                allowClear: true,
                width: '100%'
            });

            // 2. Monitora mudança no Status
            $('#ddlStatus').change(function() {
                verificarStatus();
            });

            // 3. Executa ao carregar a página
            verificarStatus();
        });

        // Função para mostrar/esconder o campo de cliente
        function verificarStatus() {
            // Pega o texto da opção selecionada
            var texto = $("#ddlStatus option:selected").text();

            if (texto === "Vendido" || texto === "A Pagar") {
                $("#divCliente").slideDown(); // Efeito suave
            } else {
                $("#divCliente").slideUp();
                // Opcional: Limpar o cliente se mudar status para Estoque?
                // $("#ddlCliente").val(null).trigger("change");
            }
        }
    </script>
}