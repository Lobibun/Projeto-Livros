@model IEnumerable<LivroCDF.Models.Exemplar>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th style="width: 60px;">Capa</th>
                <th>Livro</th>
                <th>Data da Venda</th>
                <th>Última Atualização</th>
                <th>Valor</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.Livro != null && !string.IsNullOrEmpty(item.Livro.FotoCaminho))
                        {
                            <img src="@item.Livro.FotoCaminho" class="rounded shadow-sm" style="width: 40px; height: 60px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded" style="width: 40px; height: 60px;">
                                <i class="bi bi-book"></i>
                            </div>
                        }
                    </td>
                    <td>@item.Livro?.Titulo</td>
                    <td>@item.DataVenda?.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="text-muted">@item.DataUltimaAtualizacao?.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="text-success fw-bold">R$ @item.Valor.ToString("N2")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Detalhes</a>
                    </td>
                </tr>
            }
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center text-muted py-4">Nenhuma venda encontrada.</td>
                </tr>
            }
        </tbody>
    </table>
</div>