@model IEnumerable<LivroCDF.Models.Exemplar>

<div class="table-responsive">
    <table class="table table-hover align-middle mb-0 text-nowrap">
        <thead class="table-dark">
            <tr>
                <th style="width: 60px;" class="text-center">Capa</th>
                <th>Livro</th>
                <th>Data Venda</th>
                <th>Atualizado em</th>
                <th>Valor Venda</th>
                <th class="text-end">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @if (item.Livro != null && !string.IsNullOrEmpty(item.Livro.FotoCaminho))
                        {
                            <img src="@item.Livro.FotoCaminho" class="rounded shadow-sm border" style="width: 40px; height: 60px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="bg-secondary text-white d-inline-flex align-items-center justify-content-center rounded" style="width: 40px; height: 60px;">
                                <i class="bi bi-book"></i>
                            </div>
                        }
                    </td>
                    <td class="fw-bold text-wrap" style="min-width: 150px;">@item.Livro?.Titulo</td>
                    <td>@item.DataVenda?.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="text-muted small">@item.DataUltimaAtualizacao?.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="text-success fw-bold">R$ @item.Valor.ToString("N2")</td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-eye"></i><span class="d-none d-md-inline ms-1">Detalhes</span>
                        </a>
                    </td>
                </tr>
            }
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center py-5">
                        <i class="bi bi-cash-coin fs-1 text-muted"></i>
                        <p class="text-muted mt-2">Nenhuma venda encontrada.</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>