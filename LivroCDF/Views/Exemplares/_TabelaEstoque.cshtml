@model IEnumerable<LivroCDF.Models.Exemplar>
@using LivroCDF.Models.Enums

<div class="table-responsive">
    <table class="table table-hover align-middle mb-0 text-nowrap">
        <thead class="table-light">
            <tr>
                <th style="width: 60px;" class="text-center">Capa</th>
                <th>Livro</th>
                <th>Data Entrada</th>
                <th>Valor</th>
                <th>Status</th>
                <th class="text-end">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                string classeLinha = (item.Status == StatusLivro.APagar) ? "table-warning" : "";
                <tr class="@classeLinha">
                    <td class="text-center">
                        @if (item.Livro != null && !string.IsNullOrEmpty(item.Livro.FotoCaminho))
                        {
                            <img src="@item.Livro.FotoCaminho" class="rounded shadow-sm border"
                                 style="width: 40px; height: 60px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="bg-secondary text-white d-inline-flex align-items-center justify-content-center rounded shadow-sm"
                                 style="width: 40px; height: 60px;">
                                <i class="bi bi-book"></i>
                            </div>
                        }
                    </td>
                    <td class="fw-bold text-dark text-wrap" style="min-width: 150px;">@item.Livro?.Titulo</td>
                    <td class="text-muted">@item.DataEntrada.ToShortDateString()</td>
                    <td>R$ @item.Valor.ToString("N2")</td>
                    <td>
                        @if (item.Status == StatusLivro.APagar)
                        {
                            <span class="badge bg-warning text-dark">@Html.DisplayFor(modelItem => item.Status)</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@Html.DisplayFor(modelItem => item.Status)</span>
                        }
                    </td>
                    <td class="text-end">
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Excluir">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox fs-1 text-muted"></i>
            <p class="text-muted mt-2">Nenhum livro encontrado no estoque.</p>
        </div>
    }
</div>