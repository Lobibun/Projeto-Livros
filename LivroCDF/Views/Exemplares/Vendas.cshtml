@model IEnumerable<LivroCDF.Models.Exemplar>

@{
    ViewData["Title"] = "Relatório Financeiro";
    // Nota: O cálculo de total abaixo é apenas para a carga inicial.
    // Se quiser atualizar o total via AJAX, precisaria retornar um JSON com o valor ou atualizar no HTML retornado.
    float totalInicial = (Model != null) ? Model.Sum(x => x.Valor) : 0;
    int qtdInicial = (Model != null) ? Model.Count() : 0;
}

<h1>💰 Relatório de Vendas</h1>

<div class="card p-4 mb-4 bg-light shadow-sm">
    <h5 class="card-title text-muted mb-3">Filtrar Vendas</h5>
    <div class="row g-3 align-items-end">

        <div class="col-md-4">
            <label class="fw-bold">Pesquisa Rápida:</label>
            <input type="text" id="filtroTexto" class="form-control" placeholder="Livro ou Cliente..." />
        </div>

        <div class="col-md-3">
            <label class="fw-bold">De:</label>
            <input type="date" id="dataInicio" class="form-control" value="@ViewBag.DataInicio" />
        </div>
        <div class="col-md-3">
            <label class="fw-bold">Até:</label>
            <input type="date" id="dataFim" class="form-control" value="@ViewBag.DataFim" />
        </div>

        <div class="col-md-2">
            <button onclick="limparFiltros()" class="btn btn-outline-secondary w-100">
                <i class="bi bi-x-circle"></i> Limpar
            </button>
        </div>
    </div>
</div>

<div class="alert alert-success d-flex justify-content-between align-items-center mb-3">
    <div>
        <h4 class="alert-heading mb-0">Resultado</h4>
        <small>Valores baseados na exibição atual.</small>
    </div>
    <div class="text-end">
        <span class="d-block small">Faturamento Inicial:</span>
        <span style="font-size: 1.5em; font-weight: bold;">R$ @totalInicial.ToString("N2")</span>
    </div>
</div>

<div id="containerTabela">
    <partial name="_TabelaVendas" model="Model" />
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Monitora digitação (com delay para não travar) e mudança de datas
            let timeout = null;

            $("#filtroTexto").on("keyup", function() {
                clearTimeout(timeout);
                timeout = setTimeout(atualizarTabela, 500); // Espera 500ms após parar de digitar
            });

            $("#dataInicio, #dataFim").on("change", atualizarTabela);
        });

        function atualizarTabela() {
            var termo = $("#filtroTexto").val();
            var inicio = $("#dataInicio").val();
            var fim = $("#dataFim").val();

            // Efeito visual de carregamento
            $("#containerTabela").css("opacity", "0.5");

            $.get("/Exemplares/FiltrarVendas", { termo: termo, dataInicio: inicio, dataFim: fim })
                .done(function (data) {
                    $("#containerTabela").html(data);
                    $("#containerTabela").css("opacity", "1");
                })
                .fail(function() {
                    alert("Erro ao filtrar. Tente novamente.");
                    $("#containerTabela").css("opacity", "1");
                });
        }

        function limparFiltros() {
            $("#filtroTexto").val("");
            $("#dataInicio").val("");
            $("#dataFim").val("");
            atualizarTabela();
        }
    </script>
}