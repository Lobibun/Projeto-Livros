@model IEnumerable<LivroCDF.Models.Exemplar>

@{
    ViewData["Title"] = "Controle de Estoque";
}

<h1>📦 Controle de Estoque (Ativos)</h1>

<div class="row mb-3">
    <div class="col-md-6">
        <a asp-action="Create" class="btn btn-success">Nova Entrada</a>
    </div>
</div>

<div class="card p-3 mb-4 bg-light">
    <div class="row">
        <div class="col-md-8">
            <label>Pesquisa Rápida (Nome do Livro):</label>
            <input type="text" id="campoBusca" class="form-control" placeholder="Nome do livro" />
        </div>
        <div class="col-md-4">
            <label>Filtro Rápido:</label>
            <select id="filtroStatus" class="form-control">
                <option value="">Todos</option>
                <option value="0">Em Estoque</option>
                <option value="1">A Pagar</option>
            </select>
        </div>
    </div>
</div>

<div id="containerTabela">
    <partial name="_TabelaEstoque" model="Model" />
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // SCRIPT ORIGINAL DE AJAX MANTIDO
            function atualizarTabela() {
                var termo = $("#campoBusca").val();
                var status = $("#filtroStatus").val();

                $.get("/Exemplares/FiltrarEstoque", { termoPesquisa: termo, filtroStatus: status }, function (data) {
                    $("#containerTabela").html(data);
                });
            }

            $("#campoBusca").on("input", atualizarTabela);
            $("#filtroStatus").on("change", atualizarTabela);
        });
    </script>
}