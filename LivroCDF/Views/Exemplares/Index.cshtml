@model IEnumerable<LivroCDF.Models.Exemplar>

@{
    ViewData["Title"] = "Controle de Estoque";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Nova Entrada de Estoque</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Título do Livro</th>
            <th>Data Entrada</th>
            <th>Valor (Unidade)</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Livro.Titulo</td>
                <td>@item.DataEntrada.ToShortDateString()</td>
                <td>R$ @item.Valor</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Mudar Status / Corrigir">
                        ✏️
                    </a>

                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Remover Erro">
                        🗑️
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>