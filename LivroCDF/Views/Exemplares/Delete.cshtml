@model LivroCDF.Models.Exemplar

@{
    ViewData["Title"] = "Excluir";
}

<h3>Tem certeza que deseja excluir este item?</h3>
<div class="alert alert-danger">
    <strong>Atenção:</strong> Isso removerá o item do histórico permanentemente.
    Use isso apenas se cadastrou errado. Se o livro foi vendido, altere o Status na edição.
</div>

<div>
    <h4>Detalhes do Exemplar</h4>
    <hr />
    <dl class="row align-items-center">
        <dt class="col-sm-2">Capa</dt>
        <dd class="col-sm-10">
            @if (Model.Livro != null && !string.IsNullOrEmpty(Model.Livro.FotoCaminho))
            {
                <img src="@Model.Livro.FotoCaminho" class="rounded shadow-sm" style="height: 100px;" />
            }
            else
            {
                <span class="text-muted">Sem capa</span>
            }
        </dd>

        <dt class="col-sm-2">Livro</dt>
        <dd class="col-sm-10">@Model.Livro.Titulo</dd>

        <dt class="col-sm-2">Valor</dt>
        <dd class="col-sm-10">R$ @Model.Valor</dd>

        <dt class="col-sm-2">Entrada</dt>
        <dd class="col-sm-10">@Model.DataEntrada</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>