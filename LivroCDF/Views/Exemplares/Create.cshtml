@model LivroCDF.Models.Exemplar
@using LivroCDF.Models.Enums

@{
    ViewData["Title"] = "Entrada de Estoque";
    var livros = ViewBag.ListaCompleta as List<LivroCDF.Models.Livro>;
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white py-3">
                    <h4 class="mb-0 fs-5"><i class="bi bi-box-seam"></i> Nova Entrada de Estoque</h4>
                </div>
                <div class="card-body p-3 p-md-4">
                    <form asp-action="Create" id="formEstoque">

                        <div class="text-center mb-4 p-3 border rounded bg-light" id="previewCapaContainer" style="display:none;">
                            <img id="imgCapaPreview" src="" class="rounded shadow-sm" style="max-height: 180px; object-fit: contain;" />
                            <p class="text-muted small mt-2 mb-0 fw-bold" id="tituloPreview">Capa do livro selecionado</p>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Escolha o Livro</label>
                            <select asp-for="LivroId" class="form-select" id="ddlLivros" required>
                                <option value="" data-imagem="">-- Digite para buscar --</option>
                                @if (livros != null)
                                {
                                    foreach (var item in livros)
                                    {
                                        <option value="@item.Id"
                                                data-preco="@item.Valor"
                                                data-imagem="@item.FotoCaminho">
                                            @item.Titulo (ISBN: @item.ISBN)
                                        </option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="row g-3">
                            <div class="col-12 col-md-6">
                                <label asp-for="Valor" class="form-label fw-bold">Valor Unitário (R$)</label>
                                <div class="input-group">
                                    <span class="input-group-text">R$</span>
                                    <input asp-for="Valor" class="form-control" type="number" step="0.01" min="0" id="txtValor" placeholder="0,00" />
                                </div>
                                <div class="form-text">Deixe 0 para usar preço de capa.</div>
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="form-label fw-bold">Quantidade</label>
                                <input type="number" name="Quantidade" class="form-control" value="1" min="1" required />
                            </div>
                        </div>

                        <div class="row g-3 mt-1">
                            <div class="col-12 col-md-6">
                                <label asp-for="Status" class="form-label fw-bold"></label>
                                <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<StatusLivro>()"></select>
                            </div>
                            <div class="col-12 col-md-6">
                                <label asp-for="DataEntrada" class="form-label fw-bold"></label>
                                <input asp-for="DataEntrada" class="form-control" type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <input type="submit" value="Confirmar Entrada" class="btn btn-success btn-lg" />
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#ddlLivros').select2({
                theme: 'bootstrap-5',
                placeholder: "Digite o nome do livro...",
                allowClear: true,
                width: '100%'
            });

            $('#ddlLivros').on('select2:select change', function (e) {
                var opcao = $(this).find(':selected');
                var preco = opcao.data('preco');
                var img = opcao.data('imagem');

                if (preco) {
                    $('#txtValor').val(String(preco).replace(',', '.'));
                } else {
                    $('#txtValor').val('');
                }

                if (img) {
                    $('#imgCapaPreview').attr('src', img);
                    $('#previewCapaContainer').slideDown();
                } else {
                    $('#imgCapaPreview').attr('src', '');
                    $('#previewCapaContainer').slideUp();
                }
            });

            $('#formEstoque').on('submit', function() {
                var campoValor = $('#txtValor');
                if (!campoValor.val()) {
                    campoValor.val(0);
                }
            });
        });
    </script>
}