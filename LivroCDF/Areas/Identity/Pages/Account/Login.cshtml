@page
@model LivroCDF.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Entrar";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">

            <div class="text-center mb-4">
                <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center shadow-sm" style="width: 64px; height: 64px;">
                    <i class="bi bi-shield-lock-fill fs-2"></i>
                </div>
                <h2 class="fw-bold mt-3 text-dark">Bem-vindo!</h2>
                <p class="text-muted">Informe suas credenciais para acessar.</p>
            </div>

            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-body p-4 p-md-5">
                    <section>
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 shadow-sm mb-3" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nome@exemplo.com" />
                                <label asp-for="Input.Email">E-mail</label>
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Senha" />
                                <label asp-for="Input.Password">Senha</label>
                                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            </div>

                            <div class="form-check mb-4">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label text-secondary" asp-for="Input.RememberMe">
                                    Lembrar-me neste dispositivo
                                </label>
                            </div>

                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary shadow-sm">
                                <i class="bi bi-box-arrow-in-right me-2"></i> Entrar
                            </button>

                            <div class="mt-4 text-center">
                            </div>
                        </form>
                    </section>
                </div>
            </div>

            <div class="text-center mt-3 text-muted small">
                &copy; @DateTime.Now.Year - Livraria CDF
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}